<h1><%= I18n.t('title.title_lottery_new') %></h1>
<p></p>
<%= form_for(@lottery, url: {action: "create"}) do |f| %>
  <% if @lottery.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @lottery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :winning_number %><br>
    <%= f.number_field :winning_number, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :detail %><br>
    <%= f.text_area :detail, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit t('button.button_create'), class: "btn btn-default btn-block" %>
    <%= link_to t('button.button_back'), root_path, class: "btn btn-default btn-block" %>
  </div>
<% end %>
